<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    tools:context="com.example.robiul.numericalanalysis.Bisection">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter your Highest Degree"
        android:gravity="center"
        android:id="@+id/NRtextview"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NReditText"
        android:digits="123456"
        android:inputType="text"
        android:layout_below="@+id/NRtextview"
        android:layout_alignLeft="@+id/NRtextview"
        android:layout_alignStart="@+id/NRtextview"
        android:layout_alignRight="@+id/NRtextview"
        android:layout_alignEnd="@+id/NRtextview" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter The Co-efficient of degree(using comma(,)) "
        android:id="@+id/NRtextview2"
        android:layout_below="@+id/NReditText"
        android:layout_alignLeft="@+id/NReditText"
        android:layout_alignStart="@+id/NReditText"
        android:layout_alignRight="@+id/NReditText"
        android:layout_alignEnd="@+id/NReditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NReditText2"
        android:digits="1234567890,-1-2-3-4-5-6-7-8-9"
        android:inputType="text"
        android:layout_below="@+id/NRtextview2"
        android:layout_alignLeft="@+id/NRtextview2"
        android:layout_alignStart="@+id/NRtextview2"
        android:layout_alignRight="@+id/NRtextview2"
        android:layout_alignEnd="@+id/NRtextview2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NRtextview3"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter your initial guess"
        android:layout_below="@id/NReditText2"
        android:layout_alignLeft="@+id/NReditText2"
        android:layout_alignStart="@+id/NReditText2"
        android:layout_alignRight="@+id/NReditText2"
        android:layout_alignEnd="@+id/NReditText2" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NReditText3"
        android:layout_below="@id/NRtextview3"
        android:layout_alignLeft="@+id/NRtextview3"
        android:layout_alignStart="@+id/NRtextview3"
        android:layout_alignRight="@+id/NRtextview3"
        android:layout_alignEnd="@+id/NRtextview3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here for Result"
        android:textColor="@color/buttontextColor"
        android:background="@color/buttonColor"
        android:id="@+id/NRbutton"
        android:layout_below="@+id/NReditText3"
        android:layout_alignLeft="@+id/NReditText2"
        android:layout_alignStart="@+id/NReditText2"
        android:layout_alignRight="@+id/NReditText2"
        android:layout_alignEnd="@+id/NReditText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:visibility="gone"
        android:id="@+id/NRtextview4"
        android:layout_below="@+id/NRbutton"
        android:layout_marginTop="52dp"
        android:layout_alignRight="@+id/NRbutton"
        android:layout_alignEnd="@+id/NRbutton"
        android:layout_alignLeft="@+id/NRbutton"
        android:layout_alignStart="@+id/NRbutton" />

</RelativeLayout>
